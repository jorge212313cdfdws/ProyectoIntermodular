# Base de Datos PostgreSQL
DATABASE_URL=jdbc:postgresql://localhost:5432/taller_mecanico
POSTGRES_USER=postgres
POSTGRES_PASSWORD=1234

# Puerto del servidor
PORT=8080

# JWT Secret Key (cambiar en producción por una clave segura de mínimo 256 bits)
JWT_SECRET=clave_secreta_super_segura_minimo_256_bits_para_jwt_tokens

# JPA/Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_SQL_INIT_MODE=never

# CORS - URLs permitidas separadas por comas
CORS_ALLOWED_ORIGINS=http://localhost:3000
