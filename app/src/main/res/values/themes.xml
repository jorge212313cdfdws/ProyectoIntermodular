<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Taller_mecanico" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios de la App -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Color del fondo -->
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- Estilo personalizado para los campos de texto -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Theme.Taller_mecanico" parent="Base.Theme.Taller_mecanico" />

    <!-- Estilo para campos de texto con bordes de color neutro -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#808080</item> <!-- Gris neutro para el borde -->
    </style>
</resources>
