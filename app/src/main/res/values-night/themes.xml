<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Base.Theme.Taller_mecanico" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios de la App -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

         <!-- El fondo será un poco más oscuro que el negro puro -->
        <item name="android:colorBackground">#121212</item>
    </style>

    <style name="Theme.Taller_mecanico" parent="Base.Theme.Taller_mecanico" />
</resources>
